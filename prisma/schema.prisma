datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  phoneWA  String?
  apiToken String? @unique
}

model ListUser {
  id        Int      @id @default(autoincrement())
  name      String
  whatsapp  String   @unique
  blackList Boolean? @default(false)
}
