datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  apiToken String? @unique
}

model Message {
  id        Int      @id @default(autoincrement())
  jid       String // ID chat, misalnya '6281234567890@s.whatsapp.net' atau untuk grup '1234567890@g.us'
  fromMe    Boolean?
  pushName String?
  senderJid String // Pengirim pesan
  content   String? // Isi pesan, jika berupa teks
  mediaUrl  String? // URL media, jika pesan mengandung media
  type      String // Tipe pesan, misalnya: "text", "image", "video", dll.
  createdAt DateTime @default(now())
}
